{
    "name": "troccoli/lva",
    "type": "project",
    "description": "Admin for LVA Referee Administrators.",
    "keywords": [
        "laravel",
        "framework",
        "volleyball",
        "referee",
        "admin",
        "london",
        "sport"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Giulio Troccoli-Allard",
            "email": "giulio@troccoli.it"
        }
    ],
    "require": {
        "php": "^8.3",
        "blade-ui-kit/blade-heroicons": "^2.4",
        "laravel/framework": "^11.9",
        "laravel/tinker": "^2.9",
        "livewire/livewire": "^3.4",
        "livewire/volt": "^1.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "ibex/crud-generator": "^2.1",
        "laravel/breeze": "^2.1",
        "laravel/pint": "^1.16",
        "laravel/sail": "^1.30",
        "mnito/round-robin": "^2.2",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "phpunit/phpunit": "^11.0.1",
        "spatie/laravel-login-link": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
